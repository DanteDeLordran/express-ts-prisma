generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  name String 
  lastname String
  username String
  email String @unique
  password String
  description String?
  interests Interest[]
  profilePic String?
  createdAt DateTime @default(now())
}

model Interest {
  id Int @id @default(autoincrement())
  name String
  users User[]
}